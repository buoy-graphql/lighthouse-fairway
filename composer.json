{
  "name": "buoy/lighthouse-fairway",
  "type": "library",
  "description": "Adding Fairway-compliance to the Lighthouse GraphQL server for Laravel",
  "keywords": [
    "graphql",
    "laravel",
    "laravel-graphql",
    "fairway",
    "buoy"
  ],
  "homepage": "https://ngx-buoy.com",
  "license": "MIT",
  "authors": [
    {
      "name": "Albert Haff",
      "email": "ahn@utecca.com",
      "homepage": "https://alberthaff.dk"
    }
  ],
  "require": {
    "php": "^8.2",
    "nuwave/lighthouse": "^6"
  },
  "require-dev": {
    "webonyx/graphql-php": "^15"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Buoy\\LighthouseFairway\\FairwayServiceProvider"
      ]
    }
  },
  "autoload": {
    "psr-4": {
      "Buoy\\LighthouseFairway\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "test:unit": "phpunit --colors=always --testsuite Unit"
  },
  "support": {
    "issues": "https://github.com/buoy-graphql/lighthouse-fairway/issues",
    "source": "https://github.com/buoy-graphql/lighthouse-fairway/lighthouse"
  }
}